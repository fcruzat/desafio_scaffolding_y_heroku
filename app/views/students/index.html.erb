<p id="notice"><%= notice %></p>

<h1 class="text-center">Students</h1>

<table class="table table-hover table-danger">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
  <br>

  <tbody>
    <tr>
      <% @students.each do |student| %>
      <tr class="table-dark">
        <td ><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= student.email %></td>
        <td><a class="btn btn-success btn-lg"<%= link_to 'Show', student %></a></td>
        <td><a class="btn btn-warning btn-lg"<%= link_to 'Edit', edit_student_path(student) %></a></td>
        <td><a class="btn btn-danger btn-lg"<%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></a></td>
      
  
      </tr>
      <% end %>
      
    </tr>
  </tbody>
</table> 

  
  


